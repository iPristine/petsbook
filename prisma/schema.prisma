generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  telegramId String   @unique
  firstName  String
  lastName  String?
  username  String?
  lang  String?
  pets      PetUser[]
  logs      UserLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Pet {
  id        String   @id @default(cuid())
  name      String
  age       Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  owners    PetUser[]
}

model PetUser {
  id        String   @id @default(cuid())
  pet       Pet      @relation(fields: [petId], references: [id])
  petId     String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserLog {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  action    String
  details   String?
  error     String?
  createdAt DateTime @default(now())
}




